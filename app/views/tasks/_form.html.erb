<div class="modal-dialog">
  <div class="modal-content">
    <%= simple_form_for @task, remote: true do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title"><%= form_title @task %></h4>
      </div>
      <div class="modal-body">
          <%= f.input :title %>
          <%= f.input :is_private, label: 'Private' %>
          <!-- <%= f.input :is_completed?, label: 'Completed', as: :boolean, checked_value: true, unchecked_value: false %> -->
      </div>
      <div class="modal-footer">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
        <!-- <%= button_tag 'Close', class: 'btn btn-default', :type => 'button', 'data-dismiss' => 'modal' %> -->
        <%= link_to "Cancel", "#", class: "btn btn-default", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
